pipeline {
    agent any
    
    environment {
        // Obtener la rama real del repositorio de GitHub
        BRANCH_NAME = "${env.GIT_BRANCH}"
    }
    
    stages {
       stage('Build Backend Image') {
            steps {
                script {
                    echo 'Construyendo la imagen Docker del backend...'

                    // Construir la imagen Docker del backend
                    withCredentials([string(credentialsId: 'GitHubToken', variable: 'GITHUB_TOKEN')]) {
                        sh 'gcloud builds submit --tag gcr.io/jenkinsgpc/jenkinsgpc-backend ./api'
                    }
                }
            }
        }

        stage('Build Frontend Image') {
            steps {
                script {
                    echo 'Construyendo la imagen Docker del frontend...'
                    // Construir la imagen Docker del frontend
                    withCredentials([string(credentialsId: 'GitHubToken', variable: 'GITHUB_TOKEN')]) {
                        sh 'gcloud builds submit --tag gcr.io/jenkinsgpc/jenkinsgpc-frontend ./site'
                    }
                }
            }
        }
        stage('Download Images from Cloud Storage') {
            steps {
                script {
                    // Descargar las imágenes Docker desde Cloud Storage
                    sh 'gsutil cp gs://proyecto-jenkinsgpc/jenkinsgpc-backend ./api/backend.tar.gz'
                    sh 'gsutil cp gs://proyecto-jenkinsgpc/jenkinsgpc-frontend ./site/frontend.tar.gz'

                }
            }
        }
        stage('Unit Tests') {
            steps {
                script {
                    // Ejecutar pruebas unitarias con Jest y SuperTest
                    withCredentials([string(credentialsId: 'GitHubToken', variable: 'GITHUB_TOKEN')]) {
                        sh 'npm install --prefix ./api'
                        sh 'npm run test --prefix ./api'
                    }
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Descargar las imágenes desde Cloud Storage
                    sh 'gsutil cp gs://proyecto-jenkinsgpc/jenkinsgpc-backend ./api/backend.tar.gz'
                    sh 'gsutil cp gs://proyecto-jenkinsgpc/jenkinsgpc-frontend ./site/frontend.tar.gz'

                    // Cargar las imágenes Docker desde los archivos tar.gz
                    sh 'docker load -i ./api/backend.tar.gz'
                    sh 'docker load -i ./site/frontend.tar.gz'

                    // Etiquetar las imágenes Docker con la versión correcta
                    sh 'docker tag gcr.io/jenkinsgpc/jenkinsgpc-backend gcr.io/jenkinsgpc/jenkinsgpc-backend:v1'
                    sh 'docker tag gcr.io/jenkinsgpc/jenkinsgpc-frontend gcr.io/jenkinsgpc/jenkinsgpc-frontend:v1'


                    // Aplicar despliegamiento del backend
                    withCredentials([file(credentialsId: 'Credencial_GPC', variable: 'GCP_CREDENTIAL')]) {
                        sh 'kubectl apply -f ./api/deployment-backend.yaml'
                    }

                    // Aplicar despliegamiento del frontend
                    withCredentials([file(credentialsId: 'Credencial_GPC', variable: 'GCP_CREDENTIAL')]) {
                        sh 'kubectl apply -f ./site/deployment-frontend.yaml'
                    }
                }
            }
        }
    }
}
