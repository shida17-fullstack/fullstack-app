pipeline {
    agent any
    
    environment {
        // Obtener la rama real del repositorio de GitHub
        BRANCH_NAME = "${env.GIT_BRANCH}"
    }
    
    stages {
        stage('Unit Tests') {
            steps {
                script {
                    // Ejecutar pruebas unitarias con Jest y SuperTest
                    sh 'npm install --prefix ./api'
                    sh 'npm run test --prefix ./api'
                    // Puedes agregar más pasos de prueba según sea necesario
                }
            }
        }
        
        stage('Cloud Build') {
            steps {
                // Utiliza el plugin de Cloud Build para iniciar la compilación
                script {
                    // Ejemplo de uso del plugin de Cloud Build
                    cloudBuild projectId: 'jenkinsgpc', 
                               recipe: 'cloudbuild.yaml', 
                               source: '.', 
                               substitutions: "BRANCH_NAME=${BRANCH_NAME}"
                }
            }
        }
    }
}
