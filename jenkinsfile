pipeline {
    agent any
    
    environment {
        // Obtener la rama real del repositorio de GitHub
        BRANCH_NAME = "${env.GIT_BRANCH}"
        GCP_PROJECT_ID = 'jenkinsgpc' // ID del proyecto en GCP
        CLOUD_BUILD_SERVICE_ACCOUNT = '606820346362@cloudbuild.gserviceaccount.com' // Cuenta de servicio de Cloud Build
    }
    
    stages {
        stage('Unit Tests') {
            steps {
                script {
                    // Ejecutar pruebas unitarias con Jest y SuperTest
                    sh 'npm install --prefix ./api'
                    sh 'npm run test --prefix ./api'
                }
            }
        }
        
        stage('Cloud Build') {
            steps {
                script {
                    echo 'Iniciando Cloud Build...'
                    // Ejecutar el comando de Cloud Build y almacenar la salida en un archivo temporal
                    sh """
                        gcloud builds submit \
                        --config=cloudbuild.yaml \
                        --project=${GCP_PROJECT_ID} \
                        --account=${CLOUD_BUILD_SERVICE_ACCOUNT} \
                        . > cloud_build_output.txt
                    """
                    
                    // Leer la salida de la compilación desde el archivo temporal y mostrarla en la salida de consola
                    def output = readFile('cloud_build_output.txt').trim()
                    println(output)
                    
                    // Verificar si hubo errores en la compilación
                    if (output.contains('ERROR')) {
                        error 'Error durante la compilación de Cloud Build'
                    }
                    
                    echo 'Cloud Build finalizado.'
                }
            }
        }
    }
}
